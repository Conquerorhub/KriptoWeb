@model WebNewsFinal.Models.Haber

@{ Layout = "~/Views/Shared/_MainLayout.cshtml"; }

<section class="section-wrap main-content">
    <div class="container">
        <div class="row">

            <!-- post content -->
            <div class="col-lg-8 blog__content mb-30">

                <!-- standard post -->
                <article class="entry">

                    <div class="single-post__entry-header entry__header">
                        <h1 class="single-post__entry-title">
                            @Model.baslik
                        </h1>

                        <ul class="entry__meta">
                            <li class="entry__meta-date">
                                @Model.yayin_tarihi
                            </li>
                        </ul>
                    </div>

                    <div class="entry__img-holder">
                        <img src="@Model.kapak_foto" alt="" class="entry__img">
                    </div>

                    <div class="entry__article-wrap">

                        <!-- Share -->
                        <div class="entry__share">
                            <div class="sticky-col">
                                <div class="socials entry__share-socials">
                                    <a href="#" class="social social-facebook entry__share-social social--colored-facebook">
                                        <i class="ui-facebook"></i>
                                    </a>
                                    <a href="#" class="social social-twitter entry__share-social social--colored-twitter">
                                        <i class="ui-twitter"></i>
                                    </a>
                                    <a href="#" class="social social-google-plus entry__share-social social--colored-google">
                                        <i class="ui-google"></i>
                                    </a>
                                </div>
                            </div>
                        </div> <!-- share -->

                        <div class="entry__article">
                            <p>@Model.icerik</p>

                        </div> <!-- end entry article -->

                    </div>

                </article> <!-- end standard post -->


            </div> <!-- end post content -->
            <!-- Sidebar -->

        </div> <!-- end row -->
    </div> <!-- end container -->
</section> 